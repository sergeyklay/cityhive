    app = web.Application()
    app[db_key] = session_maker
    client = await aiohttp_client(app)

async def test_endpoint_b(aiohttp_client):
    app = web.Application()  # Duplicated setup
    app[db_key] = session_maker  # Duplicated setup
    client = await aiohttp_client(app)

